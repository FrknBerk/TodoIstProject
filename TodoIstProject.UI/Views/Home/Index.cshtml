@{
    ViewData["Title"] = "Home Page";
}
@model TodoIstProject.Entities.Concrete.Login
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/css/templatecss/images/todoist.png" />
            </div>
            @using(Html.BeginForm("Index","Home",FormMethod.Post)){
                <span class="login100-form-title">
                    Todo List Login
                </span>
                
                <div class="wrap-input100 validate-input">
                    @Html.TextBoxFor(x => x.UserName,new {@class = "input100"})
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    @Html.TextBoxFor(x => x.Password,new {@class = "input100", @type = "password"})
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    @Html.HiddenFor(m => m.UserName, new {id = "username"})
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Giriş
                    </button>
                </div>

                <div class="text-center p-t-136">
                    <a class="txt2" href="#">
                        Create your Account
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
