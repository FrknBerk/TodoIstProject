@{
    Layout = "_AdminLayout";
}
@model TodoIstProject.Entities.Concrete.TodoIstTask
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">Todo Ekle</div>
        <div class="card-body card-block">
            @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Başlık</label>
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.Title,new {@class = "form-control"})
                        <div class="input-group-addon"><i class="fa fa-header"></i></div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.Description, new {@class = "form-control"})
                        <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Başlangıç Tarihi</label>
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.StartDate, new {@class="form-control", @type = "date"})
                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Bitiş Tarihi</label>
                    <div class="input-group">
                         @Html.TextBoxFor(x => x.FinishDate, new {@class="form-control", @type = "date"})
                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.DropDownList("UserId",new SelectList(ViewBag.UserList,"Value","Text"),"Kullanıcı Seçiniz..." ,new { @class = "form-control"})
                    </div>
                </div>
                <br />
                <div class="form-actions form-group"><button type="submit" class="btn btn-secondary btn-sm">Ekle</button></div>
            }
        </div>
    </div>
</div>